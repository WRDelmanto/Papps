<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Background -->
            <solid
                android:color="@color/general_button_background_tint">
            </solid>

            <!-- Border -->
            <stroke
                android:width="2dp"
                android:color="@color/general_button_border_tint">
            </stroke>

            <!-- Corner roundness -->
            <corners
                android:radius="10dp">
            </corners>
        </shape>
    </item>
</selector>